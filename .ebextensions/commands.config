container_commands:
    01_node_install:
        test: "[ -f /usr/bin/node ]"
        command: "yum install -y nodejs --enablerepo=epel"
    02_npm_install:
        test: "[ -f /usr/bin/npm ]"
        command: "yum install -y npm --enablerepo=epel"
    03_node_update:
        test: "[ -f /usr/bin/n ]"
        command: "npm install -g n && n stable"
    04_npm_install:
        test: "[ ! -d node_modules/ ] && find / -name node_modules 2> /dev/null"
        command: "npm install $PWD"
    05_npm_build:
        test: "npm run test"
        command: "npm run build"
